# GlobeTrotter Backend Environment Configuration

# Database
DATABASE_URL="file:./dev.db"

# JWT Secret
JWT_SECRET="your-secret-key-here"

# Server Port
PORT=5000

# External API Configuration
# Set to 'true' to enable external API calls, 'false' to use mock data only
API_ENABLED=false

# External API URL (only used when API_ENABLED=true)
EXTERNAL_API_URL="http://127.0.0.1:5000/api/destinations"

# External API Key (only used when API_ENABLED=true)
EXTERNAL_API_KEY="globetrotter-12345"

# Environment
NODE_ENV=development
